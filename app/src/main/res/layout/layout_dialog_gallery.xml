<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btCloseGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:src="@drawable/ic_close_white_24dp" />

    <ImageButton
        android:id="@+id/btDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:src="@drawable/ic_close_white_24dp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tvGallerySeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="/"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tvGalleryTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tvGallerySeparator"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tvGalleryPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/tvGallerySeparator"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tvGalleryMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvGallerySeparator"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorAccent"
        android:visibility="gone" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vpGallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tvGalleryMessage"
        android:layout_below="@id/btCloseGallery" />


</RelativeLayout>