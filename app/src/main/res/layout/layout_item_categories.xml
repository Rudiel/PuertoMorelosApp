<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlCategoryContainer"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    >

    <ImageView
        android:id="@+id/ivImageCategoryBack"
        android:layout_width="match_parent"
        android:minHeight="200dp"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/gradient_images_categories"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ivCateItem"
        android:elevation="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_account_balance_white_48dp" />

    <TextView
        android:id="@+id/tvCategoryName"
        android:elevation="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivCateItem"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorAccent" />

</RelativeLayout>